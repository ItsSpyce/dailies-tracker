{
  "configurations": [
    {
      "name": "Electron Main",
      "program": "${workspaceFolder}/main.js",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/packages/electron/node_modules/@electron-forge/cli/script/vscode/sh",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/packages/electron/node_modules/@electron-forge/cli/script/vscode.cmd"
      },
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/packages/electron",
      "console": "integratedTerminal"
    }
  ]
}
